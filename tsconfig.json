{
  "compilerOptions": {
    "outDir": "dist",
    "incremental": true,
    "composite": true,
    "target": "ES2018",
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ]
  },
  "include": [
    "**/test/**/*.ts",
    "**/src/**/*.ts",
    "**/src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
